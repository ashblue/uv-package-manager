{
  "name": "uv-package-manager",
  "version": "1.0.0",
  "description": "A package manager for Unity3D. The back-end server portion of the software.",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "node watch-shim.js && npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --progress --colors --watch",
    "watch:server": "nodemon \"./dist/bundle.js\" --watch \"./dist/*\"",
    "serve": "build && nodemon \"./dist/bundle.js\"",
    "build": "webpack",
    "test": "TEST=true mocha-webpack \"src/**/*.spec.ts\" --watch",
    "test:single": "TEST=true mocha-webpack \"src/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashblue/uv-package-manager.git"
  },
  "author": "Ash Blue",
  "bugs": {
    "url": "https://github.com/ashblue/uv-package-manager/issues"
  },
  "homepage": "https://github.com/ashblue/uv-package-manager#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.1.0",
    "mocha-webpack": "^1.0.1",
    "nodemon": "^1.14.7",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "@types/chai": "^4.0.10",
    "@types/express": "^4.11.0",
    "@types/mocha": "^2.2.45",
    "@types/mongoose": "^4.7.31",
    "@types/node": "^8.5.2",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "jwt-simple": "^0.5.1",
    "mongoose": "^5.0.0-rc0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1"
  }
}
