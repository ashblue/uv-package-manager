{
  "name": "uvpm-server",
  "version": "1.0.0",
  "description": "A package manager for Unity3D. The back-end server portion of the software.",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "node watch-shim.js && npm-run-all --parallel watch:server watch:build",
    "watch:build": "tsc -w",
    "watch:server": "nodemon dist/index.js --watch dist",
    "serve": "npm run build && node \"./dist/index.js\"",
    "serve:production": "NODE_ENV=production npm run build && node \"./dist/index.js\"",
    "build": "npm run lint && tsc",
    "elastic-search-reset": "curl -X DELETE 'http://localhost:9200/_all'",
    "test": "TEST=true mocha --watch \"src/**/*.spec.ts\"",
    "test:single": "TEST=true mocha \"src/**/*.spec.ts\"",
    "test:file": "TEST=true mocha --watch",
    "test:all": "npm run build && npm run coverage",
    "coverage": "TEST=true nyc --reporter=text --reporter=html mocha \"src/**/*.spec.ts\"",
    "coverage:file": "TEST=true nyc --reporter=text --reporter=html mocha",
    "coverage:simple": "TEST=true nyc mocha \"src/**/*.spec.ts\"",
    "coverage:ci": "npm run coverage:simple && nyc report --reporter=text-lcov > coverage.lcov",
    "cli": "node \"dist/commands\"",
    "create-user": "npm run cli -- create-user",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "precommit": "npm run build",
    "prepush": "npm run test:all"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashblue/uv-package-manager.git"
  },
  "author": "Ash Blue",
  "bugs": {
    "url": "https://github.com/ashblue/uv-package-manager/issues"
  },
  "homepage": "https://github.com/ashblue/uv-package-manager#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.7",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "sinon": "^4.2.2",
    "supertest": "^3.0.0",
    "ts-loader": "^3.2.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/async": "^2.0.46",
    "@types/chai": "^4.0.10",
    "@types/express": "^4.11.0",
    "@types/inquirer": "0.0.36",
    "@types/lodash": "^4.14.92",
    "@types/mocha": "^2.2.45",
    "@types/mongoose": "^4.7.31",
    "@types/node": "^8.5.2",
    "@types/request": "^2.0.12",
    "@types/sinon": "^4.1.3",
    "async": "^2.6.0",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "commander": "^2.13.0",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "inquirer": "^5.0.1",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "mongoosastic": "^4.3.0",
    "mongoose": "^5.0.0-rc0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "tmp": "0.0.33",
    "uuid": "^3.1.0"
  }
}
