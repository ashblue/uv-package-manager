{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "lib": ["es6"],

    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
  },
  "include": [
    "src/**/*"
  ],

  "exclude": [
    "./node_modules"
  ]
}
